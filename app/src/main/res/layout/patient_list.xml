<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UselessParent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/patient_list_icon"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="30dp"
                    android:backgroundTint="@android:color/holo_blue_bright"
                    app:tint="@android:color/holo_blue_bright"
                    android:layout_height="30dp" android:contentDescription="@string/user"/>
            <TextView
                    android:id="@+id/patient_list_text"
                    android:layout_marginEnd="25dp"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginTop="15dp"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"/>
            <ImageView
                    android:id="@+id/patient_list_see"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/visibility"
                    android:layout_marginEnd="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/logo"
                    tools:ignore="SmallSp"/>
            <ImageView
                    android:id="@+id/patient_list_delete"
                    android:src="@drawable/delete"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:contentDescription="@string/logo"
                    android:layout_height="wrap_content" tools:ignore="SmallSp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>