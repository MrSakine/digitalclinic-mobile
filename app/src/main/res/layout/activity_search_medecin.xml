<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".users.SearchMedecinActivity">
    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            app:startIconDrawable="@drawable/search_blue"
            app:startIconTint="@android:color/holo_blue_bright"
            android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/med_search_edittext"
                android:hint="@string/search"
                android:textSize="18sp"
                app:boxBackgroundMode="outline"
                android:inputType="textCapSentences"
                android:backgroundTint="@android:color/transparent"
                android:shadowRadius="@integer/material_motion_duration_long_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>
    <ListView
            android:visibility="visible"
            android:id="@+id/med_search_listview"
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <LinearLayout
            android:id="@+id/no_med_found_layout"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" tools:ignore="UseCompoundDrawables">
        <ImageView
                android:contentDescription="@string/logo"
                android:src="@drawable/sentiment_dissatisfied"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/no_user_found"
                android:text="@string/no_med_found"
                android:textStyle="bold"
                android:textSize="20sp"
                android:fontFamily="sans-serif"
                android:layout_gravity="center"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>