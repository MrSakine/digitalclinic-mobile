<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent"
                tools:ignore="UselessParent">

        <LinearLayout android:layout_width="match_parent"
                      android:padding="10dp"
                      android:layout_height="wrap_content"
                      tools:ignore="UselessLeaf">
            <ImageView
                    android:id="@+id/spe_list_icon"
                    android:src="@drawable/stars"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:contentDescription="@string/logo"/>
            <TextView
                    android:id="@+id/spe_list_text"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginStart="10dp"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"/>
            <ImageView
                    android:id="@+id/spe_list_edit"
                    android:layout_marginTop="11dp"
                    android:src="@drawable/edit2"
                    android:layout_marginEnd="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/logo"
                    tools:ignore="SmallSp"/>
            <ImageView
                    android:id="@+id/spe_list_see"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/visibility"
                    android:layout_marginEnd="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/logo"
                    tools:ignore="SmallSp"/>
            <ImageView
                    android:id="@+id/spe_list_button"
                    android:src="@drawable/delete"
                    android:contentDescription="@android:string/cut"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" tools:ignore="SmallSp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>